#include <stdio.h>

int main(void) {
  FILE *pont_arq;
  char tx;
  int cont = 0;
  pont_arq = fopen("texto.txt", "r");
  while ((tx = fgetc(pont_arq)) != EOF) { //leitura de caracteres
    printf("%c", tx);
    if (tx == 'a') {
      cont ++;
    }
  }
  printf("\nQuantidade de A's: %d", cont);
  fclose(pont_arq);
  return 0;
}
